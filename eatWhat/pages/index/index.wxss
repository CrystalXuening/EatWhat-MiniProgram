/* 首页 */

Page {
  /* 背景图片 */
  overflow: hidden; /* 固定不可滑动 */
  position: fixed;
  background-image: url(https://img.ui.cn/data/file/5/1/2/2195215.png);
  background-size: cover;
  background-color: rgb(245, 245, 245);
  /* background-size: 100% 100%; */
}

.index_container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.userinfo {
  display: flex;
  flex-direction: row-reverse;
  padding-top: 140rpx;
  padding-right: 60rpx;
}

.userinfo-avatar {
  float: right;
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  font-size: 28rpx;
  line-height: 52rpx;
  margin: 0rpx;
}

.index_head {
  height: 260rpx;
  margin: 36rpx 36rpx 36rpx 36rpx;
}

.index_title {
  font-size: 50rpx;
  letter-spacing: 4rpx; /* 字的间距 */
  text-indent: 0rpx; /* 首行缩进 */
  color: white;
  font-weight: bold;
}

.located {
  display: flex;
  flex: column;
  height: 60rpx;
  /* background-color: blue; */
  padding-bottom: 0px;
}

.locatedImg {
  height: 40rpx;
  width: 30rpx;
  margin: 6rpx 10rpx 0rpx 4rpx;
}

.locationWord {
  font-size: 30rpx;
  color: #f6f6f6;
}

.search {
  overflow: hidden;
  background-color: #fff;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin: 4rpx 20rpx 20rpx 20rpx;
  border-radius: 3px;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.index_botton {
  display: flex;
  margin: 40rpx auto;
  align-items: center;
}

.botton {
  height: 200rpx;
  width: 300rpx;
  display: block;
  margin: 0 auto;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  background-color: rgb(247, 223, 188);
}

.line2 {
  color: rgb(238, 183, 124);
  background-color: rgb(254, 254, 255);
}
