/* 个人中心样式 */

.myself-content {
  color: #330000;
  font-size: 38rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  background-color: #f6f6f6;
}

.myself-information {
  position: relative;
  display: flex;
  flex: column;
  width: 100%;
  height: 300rpx;
  margin: 0;
  background-color: #eeb87c;
}

.myself-protrait {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 60rpx 0rpx 0rpx 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.myself-name {
  font-size: 46rpx;
  vertical-align: middle;
  margin: 150rpx 0rpx 100rpx 40rpx;
}

.myself-list {
  display: flex;
  flex: column;
  height: 120rpx;
  margin: 24rpx 0rpx 24rpx 0rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 0px;
}

.myself-list-image {
  height: 60rpx;
  width: 60rpx;
  margin: 24rpx 0px 0rpx 50rpx;
  vertical-align: middle;
}

.myself-list-text {
  margin: 35rpx 20px 0rpx 30rpx;
  vertical-align: middle;
}
